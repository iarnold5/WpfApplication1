        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="IBM Launchpad">
    <Grid Margin="5">
        <Grid Height="20" VerticalAlignment="Top">
            <Menu x:Name="menu">

            </Menu>
        </Grid>
