                        <Grid Height="26" Margin="450,67,100,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Admin Stuff">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
